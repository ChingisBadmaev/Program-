#include <iostream>
#include <cmath>
using namespace std;
int main(){
  int n, t = 1;
  cin >> n;
  double* A = new double[n];
  double* B = new double[n];
  int* C = new int[n];
  double* K = new double[n];
  double* H = new double[n];
  for(int i = 0; i < n; i++)
    cin >> A[i] >> B[i];
  if(A[0] - A[n-1] == 0)
    K[n-1] = 12345;
  else K[n-1] = (B[0] - B[n-1])/(A[0] - A[n-1]);
  if(K[n-1] == 0)
    H[n-1] = B[n-1];
  else 
    if(K[n-1] == 12345)
      H[n-1] = A[n-1];
    else H[n-1] = -(K[n-1]/abs(K[n-1]))*(A[n-1] - B[n-1]/K[n-1]);
  for(int i = 0; i < n-1; i++){
    if(A[i+1] - A[i] == 0)
      K[i] = 12345;
    else K[i] = (B[i+1] - B[i])/(A[i+1] - A[i]);
    if(K[i] == 0)
      H[i] = B[i];
    else 
      if(K[i] == 12345)
        H[i] = A[i];
      else H[i] = -K[i]*(A[i] - B[i]/K[i]); 
  }
  int s = 0, s1 = 0;
  for(int i = 0; i < n; i++){
    for(int j = 0; j < n; j++){
      if(K[i]*A[j] + H[i] > B[j])
        C[j] = -1;
      if(K[i]*A[j] + H[i] < B[j])
        C[j] = 1;
      if(K[i]*A[j] + H[i] == B[j])
        C[j] = 0;
      s += abs(C[j]);
      s1 += C[j];
    }
    if(s != abs(s1))
      t = 0;
    s = 0;
    s1 = 0;
  }
  cout << t;
  return 0;
}
