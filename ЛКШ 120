#include <iostream>
using namespace std;
int main(){
  int n, g, h, k = 0, j = 1;
  cin >> n;
  int* A = new int[n];
  int* T = new int[n];
  int* S = new int[n];
  cin >> A[1] >> S[1] >> T[1];
  A[1] = -1;
  for(int i = 2; i <= n; i++){
    cin >> A[i] >> S[i] >> T[i];
    if(S[i] >= S[j] + T[j]){
      A[j+1] = -1;
      j++;
    }
    if(A[i-1] != -1 && A[i-1] != 0)
      if(A[i-1] == A[i])
        k = 1;
      else 
        if(k == 1){
          g = i - 2;
          while(A[g] == A[i-1]){
            A[g] = 0;
            g--;
            j++;
          }
          A[i-1] = 0;
          j++;
          if(A[g] != A[i])
            k = 0;
        }
  }
  for(int i = 1; i <= n; i++)
    cout << A[i] << endl;
  cout << 1 << " ";
  for(int i = 2; i < n; i++)
    if(A[i] == -1)
      cout << i << " ";
  cout << n;
  return 0;
}
