#include <stdio.h>
using namespace std;
int main(){
  int n, g, h, k = 0, j = 1, j1 = 1;
  scanf("%d", &n);
  int* A = new int[n];
  int* T = new int[n];
  int* S = new int[n];
  scanf("%d%d%d", &A[1], &S[1], &T[1]);
  A[1] = -1;
  for(int i = 2; i <= n; i++){
  	scanf("%d%d%d", &A[i], &S[i], &T[i]);
    if(S[i] >= S[j] + T[j]){
      A[j1+1] = -1;
      j = j1+1;
    }
    if(A[i-1] != -1)
      if(A[i-1] == A[i])
        k = 1;
      else 
        if(k == 1){
          g = i - 2;
          while(A[g] == A[i-1]){
            A[g] = 0;
            g--;
            j1++;
          }
          A[i-1] = 0;
          j1++;
          if(A[g] != A[i])
            k = 0;
        }
  }
  for(int i = 1; i <= n; i++)
    if(A[i] != 0)
      printf("% d", i);
  return 0;
}
