#include <iostream>
#include <vector>
using namespace std;
int main(){
  int N, k = 0;
  cin >> N;
  vector <int> A(N);
  for(int i = 0; i < N; i++)
   cin >> A[i];
  for(int i = 0; i < N - 1; i++)
   for(int l = i; l < N - 1; l++)
    if(A[l] < A[l+1]){
     swap(A[l], A[l+1]);
     k += A[l] - A[l+1];
    }
  cout << k;
  return 0;
}
