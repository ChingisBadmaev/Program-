#include <iostream>
using namespace std;
int main(){
  int n, a, b, g = 0, k = 0, s = 0;
  cin >> n >> a >> b;
  int* A = new int[n];
  for(int i = 0; i < n; i++)
    cin >> A[i];
  int max = A[0];
  for(int i = 0; i < n; i++)
    s += A[i];
  while(s > 0){
    for(int i = 0; i < n; i++)
      if(max < A[i]){
        max = A[i];
        k = i;
      }
    for(int i = 0; i < n; i++){
      if(A[i] < b)
        A[i] = 0;
      else A[i] -= b;
    }
    if(A[k] < a - b)
      A[k] = 0;
    else A[k] -= a - b;
    g++;
    s = 0;
    for(int i = 0; i < n; i++)
      s += A[i];
    max = A[0];
  }
  cout << g;
  return 0;
}
