#include <iostream>
using namespace std;

struct Property { 
	double worth;
	Property(double a) { worth = a; }
	virtual double nalog() = 0;
	virtual ~Property() {}
};

struct Appartment : Property {
	Appartment(double a) : Property(a) {}
	double nalog(){ return worth * 0.001; }
};

struct Car : Property {
	Car(double a) : Property(a) {}
	double nalog(){ return worth * 0.005; }
};
struct CountryHouse : Property {
	CountryHouse(double a) : Property(a) {}
	double nalog(){ return worth * 0.002;	}
};


int main() {
	Property *M[7];
	M[0] = new Appartment(25000);
	M[1] = new Appartment(15000);
	M[2] = new Appartment(45000);
	M[3] = new Car(1500);
	M[4] = new Car(4000);
	M[5] = new CountryHouse(65000);
	M[6] = new CountryHouse(75000);
	double ans = 0;
	for (int i = 0; i < 7; i++) {
		ans += M[i]->nalog();
		delete M[i];
	}
	cout << ans << endl;
	system("pause");
	return 0;
}
