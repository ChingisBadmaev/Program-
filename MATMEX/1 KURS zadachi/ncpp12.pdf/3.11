#include <iostream>

using namespace std;

template<class T>
struct BNode
{
	T data;
	BNode<T>* left;
	BNode<T>* right;
	BNode(T dd, BNode<T>* l = nullptr, BNode<T>* r = nullptr) :data(dd), left(l), right(r){}
};

template<class T>
void destroy(BNode<T>*& p)
{
	if (p == nullptr) return;
	destroy(p->right);
	destroy(p->left);
	delete p;
}

template<class T>
void del0(BNode<T>*& p)
{
	if (p->data == 4)
	{
		destroy(p);
		return;
	}
	if (p->left != nullptr) del0(p->left);
	if (p->right != nullptr) del0(p->right);
}

