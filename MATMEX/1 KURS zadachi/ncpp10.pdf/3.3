#include <iostream>

using namespace std;

template<class T>
struct Node
{
	T d;
	Node<T> *n;
	Node(int dd = 0, Node<T> *nn = nullptr) : d(dd), n(nn) {}
};

template<class T>
void del(Node<T> *&f, int n)
{
	Node<T> *p;
	int i = 0;
	if (f->n == nullptr) return;
	while (f->n->n != nullptr && i < n) 
	{
		f = f->n;
		i++;
	}
	if (i >= n) 
	{
		p = f->n;
		f->n = f->n->n;
		delete p;
	}
}

