/*1-2. Добавить в класс SList <T> метод delete_before, удаляющий все элементы, стоящие перед первым, удовлетворяющим заданному условию. Единственным параметром этого метода будет функция типа bool (T), где T — шаблонный параметр. При этом, функция-параметр может возбуждать исключение типа CheckFailed. Если это происходит
до того, как обнаружится первый элемент, удовлетворяющий условию, список должен остаться неизменным.*/

#include <iostream>

using namespace std;

class CheckFailed {};

template<class T>
struct Node
{
	T data;
	Node<T>* next;
	Node(int dd = 0, Node<T>* nn = nullptr) : data(dd), next(nn) {}
};

template<class T>
void delete1(Node<T>*& head, int i)
{
	int j = 0;
	while (head->next != nullptr && j < i)
	{
		Node<T>* p = head;
		head = head->next;
		delete p;
		j++;
	}
}

template <class T>
bool f(T a)
{
	if (a == 0) return 1;
	if (a == 11) throw CheckFailed();
	return 0;
}

template<class T>
void delete_before(Node<T>*& head, bool(*f)(T))
{
	Node<T>* p = head;
	int i = 0;
	while (p->next != nullptr)
	{
		p = p->next;
		i++;
		if (f(p->data))
		{
			delete1(head, i);
			return;
		}
	}
}

int main()
{

	system("pause");
	return 0;
}
