#include <iostream>
#include <cstdint>

using namespace std;

int64_t g; //задаем явно количество битов для пременной t
const int pi = 3; //объявление const pi

int main() {
	cout << 567ll << endl; //выделяет память для 567 как для long long
	cout << sizeof(char) << endl; //количество байт под тип данных char
	auto a = R"(\\\)"; //авто выбор типа данных
	decltype(a) b;  //тот же тип что у а
	typedef unsigned long int uli; //тип данных uli = unsigned long int
	cout << (double)7 / 2 << endl; //изменение типа данных на одну операцию
	cout << a << endl;
	system("pause");
	return 0;
}
