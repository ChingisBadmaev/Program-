#include <iostream>
#include <sstream>
using namespace std;

union AB {
	int a;
	float b;
	AB() { a = 12; }
	AB(int p): a(p){}
	AB(float q): b(q){}
} x1;

istream &operator>>(istream &T, AB &A) { //перегрузка(только снаружи структуры)
	float t;
	T >> t;
	if (t == round(t))
		A.a = (int)t;
	else A.b = t;
	return T;
}

int main() {
	istringstream st1("7.69"); //ее использование
	st1 >> x1; 
	cout << x1.b << endl;
	system("pause");
	return 0;
}
