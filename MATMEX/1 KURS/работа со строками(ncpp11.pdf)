#include <iostream>

#include <cctype>
#include <cstring>
#include <cstdlib>
#include <iomanip>
#include <string>

using namespace std;

int main()
{
	//1)эффективный, но сложный вариант использования строк
	//объявление строковой переменной

	//а)как указатель(нельзя менять символы строки)
	char *s0;
	s0 = new char[5]; //обязательное выделение памяти для (5-1) символов строки
	//та же самая инициализация
	char *s1 = "keks";

	//б)как массив
	char s2[5]; //выделение памяти для (5-1) символов строки
	//явная инициализация массива
	char s3[6] = { 'H', 'e', 'l', 'l', 'o', '\0' };
	//или
	char s4[6] = "Hello";
	//число в скобках можно опустить
	char s5[] = "Hello";

	char c = ' ';
	//проверка на ' '
	isspace(c); //ненулевое число - если символ ' ', инчае 0, нужен <cctype>
	//проверка на цифру
	isdigit(c); //нужен <cctype>
	//проверка на латинскую букву
	isalpha(c); //нужен <cctype>
	
	//длина строки
	strlen(s0); //нужен <cstring>
	//копирование строки
	strcpy(s0, "Hello"); //нужен <cstring>, строки не могут пересекаться в памяти
	//копирование n элементов строки
	strncpy(s0, "Hello", 2); //нужен <cstring>
	//сравнение строк
	strcmp(s0, s1); //нужен <cstring>, 0 - равны, положительное	- первая строка больше, отрицательное - первая строка меньше
	//сравнивание n первых символов
	strncmp(s0, s1, 2); //нужен <cstring>
	//приписывание строки к строке
	strcat(s0, s1); //нужен <cstring>
	strncat(s0, s1, 2);
	//первое вхождение символа в строку
	strchr(s0, c); //нужен <cstring>
	//последнее
	strrchr(s0, c);
	//первое вхождение подстроки
	strstr(s0, s1);

	//превращение строки в число, нужен <cstdlib>
	atoi(s0); //целое
	atof(s0); //вещественное

	//ввод строки в (n-1) символов
	cin >> setw(5) >> s0; //нужен <iomanip>
	//считывание строки до перевода строки
	cin.getline(s0, 6); //6 - размер массива

	//2)более удобный вариант использования, нужен <string>

	string S0; //пустая строка
	string S1(s0), S2("Hello");
	//Длина строки
	S0.size();
	//считывание до перевода строки
	getline(cin, S0);
	//выделение подстроки от 2 до 3
	S0.substr(2, 3);
	//удалине подстроки от 2 до 3
	S0.erase(2, 3);
	//первое вхождение символа в строку
	S0.find_first_of(c);
	//первое вхождение любого символа из S1 в строку
	S0.find_first_of(S1);
	//последнее
	S0.find_last_of(S1);
	//индекс первого символа первого вхождения
	S0.find(S1);
	//вставка строки с индекса 2
	S0.insert(2, S1);
	//замена со 2 позиции 3 символов на 4 символа c
	S0.replace(2, 3, 4, c);
	//проверка на пустоту
	S0.empty();
	system("pause");
	return 0;
}
