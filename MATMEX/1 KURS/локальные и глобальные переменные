#include <iostream>
#include <cmath>

#include "Header.h"

using namespace std;

int main(){
	{static int i = 0; cout << i << endl;} //значение i не стирается при выходе из оператора, нот действует только в нем
	{int C = 8; cout << C << endl << ::C << endl;} //Объявление локальной переменной и обращение к глобальной под тем же именем
	cout << A;//вывод глобальной переменной = 567
        cout << endl << B;//вывод локальной переменной = 0
	system("pause");
	return 0;
}

//файл Header.h
extern int A; //глобальная переменная видимая во всех файлах
ststic int B; //локальная переменная 
extern int C; //глобальная переменная видимая во всех файлах

//файл Source1.cpp
int A = 567; //действие над глобальной переменной
int B = 567; //действие над локальной переменной
int C = 567; //действие над глобальной переменной
