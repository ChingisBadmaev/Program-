#include <iostream>
using namespace std;

int *f() {} //возвращение из функции по значению
int *&f1() {} //возвращение из функции по ссылке

int main() {
	int *t, q = 11; //объявление *t
	t = &q; //прикрепление к t элемента q
	cout << *t << endl; //использование *t вместо q
	int r = *t; //использование t, вместо q
	cout << &q << " " << t << endl; //адрес ячейки памяти под q
	void *t1 = t; //неопределенный тип указателя(обязательно присвоить какой нибудь другой указатель)
	r += 18;
	*(int *)t1 = r; //применение неопределенного указателя
	int A[5] = {1, 2, 3, 4, 5};
	t = &A[1];
	int *t2 = &A[2];
	cout << t[-1] << endl; //вывод A[1 - 1](необходимо четко следить за границами массива)
	cout << *(t + 3) << endl; //вывод A[1 + 3]
	cout << t2 - t << endl; //вывод разности индексов(только одного массива только разность)
	cout << *(double *)&r << endl; //чтение ячейки памяти в виде типа double
	int b = 0x1AC9F;
	char* r = (char*)&b;
	cout << hex << (int)(unsigned char)r[0] << endl; //вывод первого байта из 4
	system("pause");
	return 0;
}
