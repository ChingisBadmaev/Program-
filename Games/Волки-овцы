int main() {
  int **Table = new int *[8];
  for(int i = 0; i < 8; i++)
    Table[i] = new int[4];
  Table[0][2] = -4;
  for(int i = 0; i < 4; i++)
    Table[7][i] = 1;
  cout << ocen(Table) << endl;
  print(Table);
  //system("pause");
  return 0;
}
