class Person: //создание класса
    name = "Tom"
    def __init__(obj, name): //конструктор по имени
       obj.name = name
    def display_info(self): 
        print("Привет, меня зовут", self.name) //использование экземпляра

        
person1 = Person("petiy") //создание переменной
person1.display_info() //использование метода
person1.name = "Sam" //изменение значения
